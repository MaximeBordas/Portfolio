{% extends 'PortefolioBundle::layout.html.twig' %}



{% block portefolio_body%}
    <nav class="navbar navbar-default  ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Maxime Bordas</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li id="Accueil"><a href="#">Accueil</a></li>
                    <li id="Parcour"><a href="#">Mon Parcours</a></li>
                    <li id="Projets"><a href="#">Mes Projets</a></li>
                    <li id="Co"><a href="{{ path('admin') }}">><span class="glyphicon glyphicon-login"></span></a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid bg-1 text-center">
        <h3>Maxime Bordas</h3>
        <img src="{{ asset('bundles/portefolio/images/mb.jpeg') }}" alt="Maxime" class="img-circle img-responsive" style="display: inline">
        <h3>Developpeur</h3>
    </div>
    <div class="container-fluid bg-2 text-center parcoursPerso">
        <h3>Mon Parcours</h3>
        <p>Mon cv est disponible juste ici</p>
        <a href="{{ path('portefolio_aff_cv') }}" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-folder-open"></span> Mon Cv
        </a>
    </div>

    <div class="container-fluid bg-3 text-center">
        <h3>Mes projets</h3>
        <div class="row">
        {% for leProjet in lesProjet %}
            <div class="col-sm-4">
                <div class="portfolio-item contain">
                    <a href="{{ path('portefolio_aff_un_projet',{'id':leProjet.id})}}">
                    {{ leProjet.titre }}
                        <img src="{{ leProjet.laImage.url }}" alt="{{ leProjet.laImage.alt }}" class="img-responsive index_img" style="width:100%">
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <footer class="container-fluid bg-4 text-center">
        <p>Maxime Bordas Â© maxime.bordas01@gmail.com</p>
    </footer>
{% endblock %}